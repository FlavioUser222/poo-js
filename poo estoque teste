class Venda{
    nome:string
    data:Date
    qtdVendida:number
   private qtdEstoque = 10
 
    constructor(nome:string,data:Date,qtdVendida :number = 0){
        this.nome = nome
        this.data = data
        this.qtdVendida = qtdVendida
    }
    
  getqtdVendida(){
     return this.qtdVendida
 }
 
 setqtdVendida(qtdVendida: number){
     this.qtdVendida = qtdVendida
 }
 
 venda():void {
     if(this.qtdVendida <= this.qtdEstoque){
     console.log(this.nome + "foi vendido")
        this.qtdEstoque = this.qtdEstoque - this.qtdVendida
     } else {
         console.log(`Estoque insuficiente`)
     }
     

 }
}

var venda1 = new Venda("Produto1",new Date())

console.log(venda1)
venda1.setqtdVendida(58)

venda1.venda()
console.log(venda1)

console.log(venda1.venda())






















